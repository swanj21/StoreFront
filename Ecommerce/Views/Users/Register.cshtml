@model StoreFront.Data.users

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<hr />

<div class="text-danger bg-danger">@ViewBag.UserExists</div>

<!--Provide the user with fields for: Username, Password, Confirm password, Email address.
    Implement required validators on all fields
    Implement a compare b/w Password and Confirm
    Implement a regex validator to check if email is valid-->
<table>
    @using (Html.BeginForm())
    {
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(user => user.UserName) <br />
                    @Html.TextBoxFor(user => user.UserName)
                    @Html.ValidationMessageFor(user => user.UserName, "", new { @class = "text-danger bg-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(user => user.Password) <br />
                    @Html.PasswordFor(user => user.Password, new { @class = "" })
                    @Html.ValidationMessageFor(user => user.Password, "", new { @class = "text-danger bg-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(user => user.ConfirmPass) <br />
                    @Html.PasswordFor(user => user.ConfirmPass)
                    @Html.ValidationMessageFor(user => user.ConfirmPass, "", new { @class = "text-danger bg-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(user => user.EmailAddress) <br />
                    @Html.EditorFor(user => user.EmailAddress)
                    @Html.ValidationMessageFor(user => user.EmailAddress, "", new { @class = "text-danger bg-danger" })
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Register" class="btn btn-info" /><br /><br />
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Back to Profile", "Index", "Users")
</p>